{
  "app": {
    "app_name": "IT_RNVR",
    "version": "1.0.0"
  },
  "ui": {
    "theme": "dark",
    "show_status_bar": true,
    "fullscreen_on_start": true,
    "fullscreen_auto_hide_enabled": true,
    "fullscreen_auto_hide_delay_seconds": 10,
    "window_state": {
      "x": 0,
      "y": 0,
      "width": 1920,
      "height": 1080
    },
    "dock_state": {
      "camera_visible": true,
      "recording_visible": true,
      "playback_visible": true
    }
  },
  "streaming": {
    "default_layout": "1x1",
    "show_timestamp": true,
    "show_camera_name": true,
    "osd_font_size": 14,
    "osd_font_color": [
      0,
      255,
      255
    ],
    "osd_valignment": "top",
    "osd_halignment": "left",
    "osd_xpad": 20,
    "osd_ypad": 15,
    "use_hardware_acceleration": true,
    "decoder_preference": [
      "avdec_h264",
      "omxh264dec",
      "v4l2h264dec"
    ],
    "buffer_size": 10485760,
    "latency_ms": 100,
    "tcp_timeout": 10000,
    "auto_reconnect": true,
    "max_reconnect_attempts": 5,
    "reconnect_delay_seconds": 5,
    "connection_timeout": 10
  },
  "cameras": [
    {
      "camera_id": "cam_01",
      "name": "Main Camera",
      "rtsp_url": "rtsp://admin:trolleycam1~@192.168.0.131:554/Streaming/Channels/102",
      "enabled": true,
      "username": null,
      "password": null,
      "use_hardware_decode": false,
      "streaming_enabled_start": true,
      "recording_enabled_start": true,
      "motion_detection": false,
      "ptz_type": "HIK",
      "ptz_port": "80",
      "ptz_channel": "1",
      "video_transform": {
        "enabled": true,
        "flip": "Vertical",
        "rotation": 0
      }
    }
  ],
  "cameras2": [
    {
      "camera_id": "cam_01",
      "name": "Main Camera",
      "rtsp_url": "rtsp://210.99.70.120:1935/live/cctv001.stream",
      "rtsp_url1": "rtsp://admin:trolleycam1~@192.168.0.131:554/Streaming/Channels/102",
      "rtsp_url2": "rtsp://210.99.70.120:1935/live/cctv001.stream",
      "enabled": true,
      "username": null,
      "password": null,
      "streaming_enabled_start": true,
      "recording_enabled_start": true
    }
  ],
  "recording": {
    "file_format": "mp4",
    "rotation_minutes": 2,
    "codec": "h264",
    "fragment_duration_ms": 1000
  },
  "backup": {
    "Des_path": "E:/sfsfsdf",
    "delete_after_backup": true,
    "verification": false,
    "destination_path": "E:/"
  },
  "storage": {
    "recording_path": "/media/itlog/NVR_MAIN/Recordings",
    "auto_cleanup_enabled": true,
    "cleanup_interval_hours": 1,
    "cleanup_on_startup": true,
    "min_free_space_gb": 1.0,
    "min_free_space_percent": 5,
    "cleanup_threshold_percent": 90,
    "retention_days": 30,
    "delete_batch_size": 5,
    "delete_batch_delay_seconds": 0,
    "auto_delete_priority": "oldest_first"
  },
  "menu_keys": {
    "camera_connect": "F1",
    "camera_stop": "F2",
    "prev_group": "N",
    "camera_connect_all": "F3",
    "camera_stop_all": "F4",
    "next_group": "M",
    "prev_config": "F5",
    "record_start": "F7",
    "screen_rotate": "F9",
    "next_config": "F6",
    "record_stop": "F8",
    "screen_flip": "F10",
    "screen_hide": "Esc",
    "menu_open": "F11",
    "program_exit": "F12"
  },
  "ptz_keys": {
    "pan_left": "Q",
    "up": "W",
    "right_up": "E",
    "left": "A",
    "stop": "S",
    "right": "D",
    "pan_down": "Z",
    "down": "X",
    "right_down": "C",
    "zoom_in": "V",
    "zoom_out": "B",
    "ptz_speed_up": "R",
    "ptz_speed_down": "T"
  },
  "logging": {
    "enabled": true,
    "log_path": "/media/itlog/NVR_MAIN/logs",
    "console": {
      "enabled": true,
      "level": "DEBUG",
      "colorize": true,
      "format": "<green>{time:YYYY-MM-DD HH:mm:ss}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> | <level>{message}</level>"
    },
    "file": {
      "enabled": true,
      "level": "DEBUG",
      "filename": "pynvr_{time:YYYY-MM-DD}.log",
      "format": "{time:YYYY-MM-DD HH:mm:ss} | {level: <8} | {name}:{function}:{line} | {message}",
      "rotation": "1 day",
      "retention": "7 days",
      "compression": "zip",
      "max_size_mb": 100,
      "rotation_count": 10
    },
    "error_log": {
      "enabled": true,
      "filename": "pynvr_errors_{time:YYYY-MM-DD}.log",
      "level": "ERROR",
      "rotation": "10 MB",
      "retention": "30 days"
    },
    "json_log": {
      "enabled": false,
      "filename": "pynvr_{time:YYYY-MM-DD}.json",
      "serialize": true
    }
  },
  "performance": {
    "alert_enabled": true,
    "alert_warning_check_interval_seconds": 30,
    "alert_critical_check_interval_seconds": 15,
    "max_cpu_percent": 80,
    "max_memory_mb": 6144,
    "max_temp": 71
  }
}